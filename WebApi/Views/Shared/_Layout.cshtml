@using Infrastructure
@using Infrastructure.Helpers


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Cummo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=MuseoModerno:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="theme/theme.css">

    @* BOOTSTRAP *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"></script>

    <style>
        body {
            font-family: var(--font-primary);
            background-color: var(--background-color);
            color: var(--text-primary);
        }

        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: var(--sidebar-background);
            border-right: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            padding-top: 20px;
            transition: width 0.3s;
            overflow-y: auto;
        }

            /* Estilizando a barra de rolagem para ficar invisível */
            .sidebar::-webkit-scrollbar {
                width: 0;
                background: transparent;
            }

            .sidebar::-webkit-scrollbar-thumb {
                background: transparent;
            }

            .sidebar.collapsed {
                width: 60px;
            }

            .sidebar h3 {
                text-align: start;
                color: var(--text-secundary);
                font-size: 13px;
                padding: 8px 15px;
            }

            .sidebar.collapsed h3 {
                display: none;
            }

        .logo {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 30px;
            position: relative;
            transition: width 0.3s, height 0.3s;
        }

        .logo img {
                width: 70px;
                transition: width 0.3s;
            }

        .sidebar.collapsed .logo img {
            width: 35px;
            margin-bottom: 25px;
        }

        .sidebar a {
            padding: 12px 20px;
            font-size: 14px;
            color: var(--text-primary);
            display: flex;
            align-items: center;
            text-decoration: none;
            transition: background-color 0.3s, color 0.3s;
            margin-bottom: 10px;
            border-radius: 12px;
            gap: 8px;
        }

            .sidebar a i {
                font-size: 16px;
                background-color: var(--bs-gray-200);
                border-radius: 12px;
                padding: 8px;
                transition: background-color 0.3s;
                border: 1px solid var(--border);
            }

            .sidebar a.active {
                font-weight: 700;
            }

                .sidebar a.active i {
                    background-color: var(--bs-gray-100);
                }

            .sidebar a.active,
            .sidebar a:hover {
                background-color: var(--secondary-color);
                color: var(--main-color);
                margin: 0px 10px 10px;
                padding: 12px 10px;
            }

        .sidebar.collapsed a {
            margin: 7px 0;
            border-radius: 0;
            padding: 12px;
        }

            .sidebar.collapsed a.active {
                font-weight: 700;
            }

            .sidebar.collapsed a.active,
            .sidebar.collapsed a:hover {
                background-color: var(--secondary-color);
                color: var(--main-color);
                padding: 12px;
            }

            .sidebar.collapsed a span {
                display: none;
            }

        .submenu {
            display: none;
            margin-bottom: 16px;
        }

            .submenu.collapsed {
                background-color: var(--sidebar-background);
                border: 1px solid var(--border);
                padding: 0;
                width: 200px;
                position: fixed;
                z-index: 1000;
            }

                .submenu.collapsed h4 {
                    margin: 0;
                    font-size: 16px;
                    color: var(--main-color);
                    font-weight: bold;
                    text-align: center;
                    padding: 5px 0;
                    border-bottom: 2px solid var(--border);
                    display: block;
                }

            .submenu.expanded h4 {
                display: none;
            }

            .submenu a {
                font-size: 12px;
                padding: 12px 20px;
                display: block;
                color: var(--text-primary);
                text-decoration: none;
            }

                .submenu a:hover {
                    background-color: var(--secondary-color);
                    color: var(--main-color);
                }

        .sidebar:not(.collapsed) .logout-btn {
            justify-content: center;
        }


        .content {
            margin-left: 270px;
            padding: 0px 15px 0px 0px;
            height: calc(100vh - 145px);
            overflow-y: auto;
            transition: margin-left 0.3s;
        }

            .content.expanded {
                margin-left: 70px;
                padding-left: 10px !important;
            }

        .page {
            background-color: var(--sidebar-background);
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 12px;
        }


        /* FOOTER */
        .footer {
            position: fixed;
            bottom: 10px;
            left: 270px;
            border-radius: 12px;
            right: 20px;
            text-align: center;
            display: flex;
            justify-content: space-between;
            font-size: 12px;
            color: var(--text-secundary);
            background: var(--sidebar-background);
            transition: left 0.3s;
            border: 1px solid var(--border);
            align-items: center;
            padding: 0 8px;
        }

            .footer p {
                margin: 0;
                padding: 8px;
            }

        .content.expanded + .footer {
            left: 80px;
        }

        .dashboard-header {
            font-size: 24px;
            font-weight: bold;
            color: var(--text-primary);
            margin-bottom: 20px;
        }

        /* HEADER */
        .header {
            position: fixed;
            top: 10px;
            left: 270px;
            right: 20px;
            height: 50px;
            background-color: var(--sidebar-background);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            border-radius: 12px;
            color: var(--text-secundary);
            border: 1px solid var(--border);
            transition: left 0.3s;
            z-index: 1000;
        }

            .header.collapsed {
                left: 80px;
            }


            .header .header-left {
                display: flex;
                align-items: center;
                gap: 15px;
            }

            .header .menu-toggle {
                background: none;
                border: none;
                color: var(--main-color);
                font-size: 20px;
                cursor: pointer;
            }

            .header .header-title {
                font-size: 16px;
                font-weight: bold;
                color: var(--text-primary);
                margin: 0;
            }

            .header .header-right {
                display: flex;
                align-items: center;
            }

            .header .user-info {
                display: flex;
                align-items: center;
                gap: 8px;
                position: relative;
            }


            .header .user-name {
                font-size: 14px;
                color: var(--text-primary);
                display: flex;
                align-items: center;
                cursor: pointer;
            }

        .status-indicator {
            width: 6px;
            height: 6px;
            background-color: #28a745;
            border-radius: 50%;
            margin-right: 8px;
        }

        .user-name i {
            font-size: 10px;
            color: var(--text-secundary);
            transition: transform 0.3s;
            margin-left: 6px;
        }


        .dropdown-menu {
            position: absolute;
            top: 100%;
            right: -7px;
            display: none;
            z-index: 1000;
            background-color: var(--sidebar-background);
            border: 1px solid var(--border);
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            padding: 10px;
            min-width: 200px;
        }

            .dropdown-menu.show {
                display: block;
            }

            .dropdown-menu a {
                margin: 7px 0;
                border-radius: 0;
                padding: 8px 12px;
                font-size: 14px;
                border-radius: 12px;
                width: 100%;
                text-decoration: none;
                color: var(--text-primary);
                display: block;
            }

                .dropdown-menu a i {
                    font-size: 14px;
                    background-color: var(--bs-gray-200);
                    border-radius: 12px;
                    padding: 8px;
                    margin-right: 6px;
                    transition: background-color 0.3s;
                    border: 1px solid var(--border);
                }

                .dropdown-menu a:hover {
                    background-color: var(--secondary-color);
                    color: var(--main-color);
                }

                    .dropdown-menu a:hover i {
                        background-color: var(--bs-gray-100);
                    }


        .content {
            margin-top: 80px;
        }

            .content.expanded + .header {
                left: 60px;
            }



        /* Estilizando a barra de rolagem */
        ::-webkit-scrollbar {
            width: 5px;
            height: 10px;
        }

        ::-webkit-scrollbar-track {
            background: var(--bs-gray-200);
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--main-color);
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--secondary-color);
            }

            ::-webkit-scrollbar-thumb:active {
                background: var(--main-color);
            }

    </style>
</head>
<body>

    <div class="sidebar" id="sidebar">
        <div class="logo">
            <img src="images/logo-light.svg" alt="IM comp">
        </div>

        @foreach (var menuSection in MenuHelper.GetMenuSections())
        {
            <h3>@menuSection.Title</h3>

            @foreach (var item in menuSection.Items)
            {
                if (item.SubItems.Count > 0)
                {
                    <a href="#" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="@item.Title" onclick="toggleSubmenu(event, '@item.Title.Replace(" ", "-")-submenu', this)">
                        <i class="@item.Icon"></i>
                        <span>@item.Title</span>
                    </a>
                    <div class="submenu" id="@item.Title.Replace(" ", "-")-submenu">
                        <h4>@item.Title</h4>
                        @foreach (var subItem in item.SubItems)
                        {
                            <a href="@subItem.Url">@subItem.Title</a>
                        }
                    </div>
                }
                else
                {
                    <a href="@item.Url" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="@item.Title">
                        <i class="@item.Icon"></i>
                        <span>@item.Title</span>
                    </a>
                }
            }
        }
    </div>



    <header class="header">
        <div class="header-left">
            <button class="menu-toggle" onclick="toggleSidebar()">
                <i class="fas fa-bars"></i>
            </button>
            <h1 class="header-title">Dashboard</h1>
        </div>
        <div class="header-right">
            <div class="status-indicator"></div>
            <div class="user-info">
                <span class="user-name" onclick="toggleDropdown(event)">Username <i class="fas fa-chevron-down" id="dropdown-icon"></i></span>
                <div class="dropdown-menu" id="user-dropdown">
                    <a href="#" class="logout-btn"><i class="fas fa-right-from-bracket"></i> Logout</a>
                </div>
            </div>
        </div>
    </header>

    <div class="content" id="content">
        <div class="page">
            @RenderBody()
        </div>
    </div>

    <div class="footer">
        <p>&copy; 2024 Cummo. All rights reserved.</p>
        <p>Version 1.0.0</p>
    </div>

    <!-- Toasts -->
    @Html.Partial("~/Views/Shared/_ToastDefault.cshtml")

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            toggleTooltip();
        });

        function toggleTooltip() {
            // Se a sidebar estiver colapsada, não faz nada
            if (document.getElementById('sidebar').classList.contains('collapsed')) {
                var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
                var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                    return new bootstrap.Tooltip(tooltipTriggerEl)
                });
            } else {
                // // Se a sidebar estiver colapsada, remove tooltips
                var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                tooltipTriggerList.forEach(function (tooltip) {
                    var tooltipInstance = bootstrap.Tooltip.getInstance(tooltip); 
                    if (tooltipInstance) {
                        tooltipInstance.dispose();
                    }
                });

            }
        }

        document.querySelector('.logout-btn').addEventListener('click', function () {
            // Aqui você pode adicionar a lógica de logout se necessário
            // Exibe o toast de sucesso
            showToast('toast-success', 'Você foi desconectado com sucesso!');
        });

        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');
            const header = document.querySelector('.header');
            const submenus = document.querySelectorAll('.submenu');

            // Oculta todos os submenus
            submenus.forEach(submenu => {
                submenu.style.display = 'none';
                submenu.classList.remove('expanded');
                submenu.classList.add('collapsed');
            });

            // Alterna a classe da sidebar
            sidebar.classList.toggle('collapsed');
            content.classList.toggle('expanded');
            header.classList.toggle('collapsed');


            // Atualiza os tooltips após alternar a sidebar
            toggleTooltip();
        }

        function toggleSubmenu(event, id) {
            const submenu = document.getElementById(id);
            const isOpen = submenu.style.display === 'block';

            const allSubmenus = document.querySelectorAll('.submenu');
            allSubmenus.forEach(function (item) {
                if (item !== submenu) {
                    item.style.display = 'none';
                }
            });

            submenu.style.display = isOpen ? 'none' : 'block';

            if (document.getElementById('sidebar').classList.contains('collapsed')) {
                submenu.classList.add('collapsed');
                submenu.classList.remove('expanded');
                submenu.style.position = 'fixed';
                submenu.style.left = '60px';
                submenu.style.top = event.target.offsetTop + 'px';
            } else {
                submenu.classList.remove('collapsed');
                submenu.classList.add('expanded');
                submenu.style.position = 'relative';
                submenu.style.left = '0';
                submenu.style.top = '0';
            }
        }


        function toggleDropdown(event) {
            const dropdown = document.getElementById('user-dropdown');
            const dropdownIcon = document.getElementById('dropdown-icon');
            dropdown.classList.toggle('show');

            window.onclick = function (event) {
                if (!event.target.closest('.user-name')) {
                    dropdown.classList.remove('show');
                    dropdownIcon.style.opacity = '1';
                }
            }
        }
    </script>
</body>
</html>
