<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Cummo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=MuseoModerno:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="theme/theme.css">

    <style>
        body {
            font-family: var(--font-primary); 
            background-color: var(--background-color);
            color: var(--text-primary);
        }

        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: var(--sidebar-background);
            border-right: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            padding-top: 20px;
            transition: width 0.3s;
        }

            .sidebar.collapsed {
                width: 60px;
            }

            .sidebar h3 {
                text-align: start;
                color: var(--text-secundary);
                font-size: 13px;
                padding: 8px 15px;
            }

            .sidebar.collapsed h3 {
                display: none;
            }

        .icon {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 30px;
            position: relative;
            transition: width 0.3s, height 0.3s;
        }

            .icon img {
                width: 70px;
                transition: width 0.3s;
            }

        .sidebar.collapsed .icon img {
            width: 35px;
            margin-bottom: 70px;
        }

        .sidebar a {
            padding: 12px 20px;
            font-size: 14px;
            color: var(--text-primary);
            display: flex;
            align-items: center;
            text-decoration: none;
            transition: background-color 0.3s, color 0.3s;
            margin-bottom: 10px;
            border-radius: 12px;
            gap: 8px;
        }

            .sidebar a i {
                font-size: 18px; 
            }

            .sidebar a.active {
                font-weight: 700;
            }

            .sidebar a.active,
            .sidebar a:hover {
                background-color: var(--secondary-color);
                color: var(--main-color);
                margin: 0px 10px 10px;
                padding: 12px 10px;
            }

        .sidebar.collapsed a {
            margin: 7px 0;
            border-radius: 0;
        }

            .sidebar.collapsed a.active {
                font-weight: 700;
            }

            .sidebar.collapsed a.active,
            .sidebar.collapsed a:hover {
                background-color: var(--secondary-color);
                color: var(--main-color);
                padding: 12px 20px;
            }

            .sidebar.collapsed a span {
                display: none;
            }

        .submenu {
            display: none;
            padding-left: 20px;
            margin-top: 0;
        }

            .submenu.collapsed {
                background-color: var(--sidebar-background);
                border: 1px solid var(--border);
                padding: 0;
                width: 200px;
                position: absolute;
                z-index: 1000;
            }

                .submenu.collapsed h4 {
                    margin: 0;
                    font-size: 16px;
                    color: var(--main-color);
                    font-weight: bold;
                    text-align: center;
                    padding: 5px 0;
                    border-bottom: 2px solid var(--border);
                    display: block;
                }

            .submenu.expanded h4 {
                display: none;
            }

            .submenu a {
                font-size: 12px;
                padding: 10px 15px;
                display: block;
                color: var(--text-primary);
                text-decoration: none;
            }

                .submenu a:hover {
                    background-color: var(--secondary-color);
                    color: var(--main-color);
                    padding: 10px 15px;
                }

        .logout-btn {
            margin: 20px;
            background-color: var(--main-color);
            color: white !important;
            font-weight: 700;
            font-size: 16px;
            padding: 10px;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            margin-top: auto;
            position: absolute;
            bottom: 20px;
            left: 0;
            right: 0;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
            transition: margin-left 0.3s;
        }

            .content.expanded {
                margin-left: 60px;
            }

        .footer {
            position: fixed;
            bottom: 5px;
            left: 270px;
            border-radius: 12px;
            right: 20px;
            text-align: center;
            display: flex;
            justify-content: space-between;
            font-size: 12px;
            color: var(--text-secundary);
            background: var(--sidebar-background);
            transition: left 0.3s;
            border: 1px solid var(--border);
            align-items: center;
            padding: 0 8px;
        }

        .footer p {
                margin: 0;
                padding: 8px;
        }

        .content.expanded + .footer {
            left: 80px;
        }

        .dashboard-header {
            font-size: 24px;
            font-weight: bold;
            color: var(--text-primary);
            margin-bottom: 20px;
        }






        /* Header */
        .header {
            position: fixed;
            top: 10px; /* Aumenta o espaço do topo */
            left: 270px;
            right: 20px;
            height: 50px;
            background-color: var(--sidebar-background);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            border-radius: 12px; /* Borda arredondada semelhante ao footer */
            color: var(--text-secundary);
            border: 1px solid var(--border);
            transition: left 0.3s;
            z-index: 1000;
        }

            .header.collapsed {
                left: 80px; /* Posiciona o header quando a sidebar está colapsada */
            }


            .header .header-left {
                display: flex;
                align-items: center;
                gap: 15px;
            }

            .header .menu-toggle {
                background: none;
                border: none;
                color: var(--main-color);
                font-size: 20px;
                cursor: pointer;
            }

            .header .header-title {
                font-size: 16px;
                font-weight: bold;
                color: var(--text-primary);
                margin: 0;
            }

            .header .header-right {
                display: flex;
                align-items: center;
                gap: 20px;
            }

/*             .header .search-bar {
                padding: 5px 10px;
                border: 1px solid var(--border);
                border-radius: 4px;
                font-size: 14px;
            }

            .header .notification-btn {
                background: none;
                border: none;
                color: var(--text-primary);
                font-size: 18px;
                cursor: pointer;
                position: relative;
            }
 */
            .header .user-info {
                display: flex;
                align-items: center;
                gap: 8px;
            }

/*             .header .user-avatar {
                width: 30px;
                height: 30px;
                border-radius: 50%;
            } */

            .header .user-name {
                font-size: 14px;
                color: var(--text-primary);
            }

        .content {
            margin-top: 80px; /* Ajusta o margin-top para evitar sobreposição do header */
        }

            .content.expanded + .header {
                left: 60px;
            }


    </style>
</head>
<body>

    <div class="sidebar" id="sidebar">
        <div class="icon">
            <img src="images/logo-light.svg" alt="Logo">
        </div>

        <h3>Dashboard</h3>
        <a href="#" class="active"><i class="fa-solid fa-chart-line"></i><span> Dashboard</span></a>
        <a href="#"><i class="fa-solid fa-square-pen"></i><span> Posts</span></a>
        <a href="#"><i class="fa-solid fa-image"></i><span> Media</span></a>
        <a href="#"><i class="fa-solid fa-table-columns"></i><span> Pages</span></a>
        <a href="#" onclick="toggleSubmenu(event, 'comments-submenu')"><i class="fa-solid fa-message"></i><span> Comments <span class="badge bg-primary ms-2">1</span></span></a>
        <div class="submenu" id="comments-submenu">
            <h4>Comments</h4>
            <a href="#">Pending</a>
            <a href="#">Approved</a>
        </div>
        <a href="#"><i class="fas fa-paint-brush"></i><span> Appearance</span></a>
        <a href="#"><i class="fa-solid fa-plug"></i><span> Plugins</span></a>
        <a href="#"><i class="fa-solid fa-image-portrait"></i><span> Users</span></a>
        <a href="#"><i class="fas fa-cog"></i><span> Settings</span></a>
        <a href="#"><i class="fas fa-tools"></i><span> Tools</span></a>
        <a href="#" class="logout-btn"><i class="fas fa-right-from-bracket"></i><span> Logout</span></a>
    </div>

    <header class="header">
        <div class="header-left">
            <button class="menu-toggle" onclick="toggleSidebar()">
                <i class="fas fa-bars"></i>
            </button>
            <h1 class="header-title">Dashboard</h1>
        </div>
        <div class="header-right">
@*             <input type="text" class="search-bar" placeholder="Search...">
            <button class="notification-btn"><i class="fas fa-bell"></i></button> *@
            <div class="user-info">
                @* <img src="images/user-avatar.jpg" alt="User Avatar" class="user-avatar"> *@
                <span class="user-name">Username</span>
            </div>
        </div>
    </header>

    <div class="content" id="content">
        <h2 class="dashboard-header">Dashboard</h2>
        @RenderBody()
    </div>

    <footer class="footer">
        <span>© 2024 Your Company</span>
        <p>Version 1.0.0</p>
    </footer>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');
            const header = document.querySelector('.header'); // Seleciona o header
            const toggleButtonIcon = document.querySelector('.toggle-button i');
            const submenus = document.querySelectorAll('.submenu');

            sidebar.classList.toggle('collapsed');
            content.classList.toggle('expanded');
            header.classList.toggle('collapsed'); // Adiciona/remova a classe collapsed no header

            if (sidebar.classList.contains('collapsed')) {
                toggleButtonIcon.classList.remove('fa-angle-left');
                toggleButtonIcon.classList.add('fa-angle-right');
            } else {
                toggleButtonIcon.classList.remove('fa-angle-right');
                toggleButtonIcon.classList.add('fa-angle-left');
            }

            submenus.forEach(submenu => {
                submenu.style.display = 'none';
            });
        }



        function toggleSubmenu(event, id) {
            const submenu = document.getElementById(id);
            const isOpen = submenu.style.display === 'block';

            const allSubmenus = document.querySelectorAll('.submenu');
            allSubmenus.forEach(function (item) {
                if (item !== submenu) {
                    item.style.display = 'none';
                }
            });

            submenu.style.display = isOpen ? 'none' : 'block';

            if (document.getElementById('sidebar').classList.contains('collapsed')) {
                submenu.classList.add('collapsed');
                submenu.classList.remove('expanded');
                submenu.style.position = 'absolute';
                submenu.style.left = '60px';
                submenu.style.top = event.target.offsetTop + 'px';
            } else {
                submenu.classList.remove('collapsed');
                submenu.classList.add('expanded');
                submenu.style.position = 'relative';
                submenu.style.left = '0';
                submenu.style.top = '0';
            }
        }
    </script>

</body>
</html>
